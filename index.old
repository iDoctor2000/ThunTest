    <script>
        // 1. Funciones del Modal
        const modal = document.getElementById('login-modal');
        const authContainer = document.getElementById('auth-container');
        const userProfile = document.getElementById('user-profile');
        const userName = document.getElementById('user-name');
        const userAvatar = document.getElementById('user-avatar');

        function openLoginModal() {
            modal.classList.remove('hidden');
        }

        function closeLoginModal() {
            modal.classList.add('hidden');
        }

        // 2. Simulaci√≥n de Login (Para cuando no hay Client ID real)
        function simulateLogin() {
            closeLoginModal();
            // Simular carga
            setTimeout(() => {
                // Actualizar interfaz
                authContainer.classList.add('hidden');
                userProfile.classList.remove('hidden');
                
                // Datos simulados de Juan
                userName.innerText = "Juan (iDoctor)";
                userAvatar.src = "https://ui-avatars.com/api/?name=Juan+Antonio&background=06b6d4&color=fff";
                
                alert("¬°Bienvenido al sotano, Doctor! Est√°s en modo demostraci√≥n.");
            }, 300);
        }

        function logout() {
            authContainer.classList.remove('hidden');
            userProfile.classList.add('hidden');
            // Si fuera real, aqu√≠ desconectar√≠amos de Google
            google.accounts.id.disableAutoSelect();
        }

        // 3. Login Real con Google (Requiere Client ID)
        // Esta funci√≥n se ejecuta autom√°ticamente cuando Google valida al usuario
        function handleCredentialResponse(response) {
            console.log("Encoded JWT ID token: " + response.credential);
            
            // Decodificar el JWT (JSON Web Token) para sacar los datos del usuario
            const responsePayload = decodeJwtResponse(response.credential);

            console.log("ID: " + responsePayload.sub);
            console.log("Full Name: " + responsePayload.name);
            console.log("Image URL: " + responsePayload.picture);
            console.log("Email: " + responsePayload.email);

            // Actualizar UI con datos REALES
            closeLoginModal();
            authContainer.classList.add('hidden');
            userProfile.classList.remove('hidden');
            userName.innerText = responsePayload.name;
            userAvatar.src = responsePayload.picture;
        }

        // Funci√≥n auxiliar para leer el token de Google
        function decodeJwtResponse(token) {
            var base64Url = token.split('.')[1];
            var base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');
            var jsonPayload = decodeURIComponent(window.atob(base64).split('').map(function(c) {
                return '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2);
            }).join(''));
            return JSON.parse(jsonPayload);
        }
    </script>
